.navbar.navbar-inverse.navbar-fixed-top
    .container
        .navbar-header
            a.navbar-brand(href="/") 学生选课系统
        .collapse.navbar-collapse
            .nav.navbar-nav.navbar-right
                li.dropdown
                    if logStatus
                        a(href="#",class="dropdown-toggle",data-toggle="dropdown",id="status") #{userName}
                    else
                        a(href="#",class="dropdown-toggle",data-toggle="dropdown",id="status") 未登录
                    ul.dropdown-menu
                        if logStatus
                            li
                                a(id="logout") 退出
                        else
                            li
                                a(id="login") 登录


