extends ../layout
block content
    .container(style="padding-top:80px;")
        .row
            .panel.panel-primary
                .panel-heading
                    h3.panel-title 密码修改
                .panel-body
                    form.form-horizontal
                        .form-group
                            label(for="oldpw",class="col-md-3 control-label") 旧密码：
                            .col-md-6
                                input(type="text",class="form-control input-sm",placeholder="请输入旧密码")
                        .form-group
                            label(for="newpw",class="col-md-3 control-label") 新密码：
                            .col-md-6
                                input(type="text",class="form-control input-sm",placeholder="请输入新密码")
                        .form-group
                            label(for="confirmpw",class="col-md-3 control-label") 确认密码：
                            .col-md-6
                                input(type="text",class="form-control input-sm",placeholder="请确认新密码")
                        .form-group
                            .col-sm-2
                            .col-sm-1
                                button(type="submit",class="btn btn-primary btn-sm btn-block") 确认修改

